<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7DED7"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="630dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:src="@drawable/show_rank_background" />

        <LinearLayout
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/rank_recycler_view_index"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="90dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ranking"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:text="Rank"
                    android:textColor="#255950"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:text="Name"
                    android:textColor="#255950"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user_age"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:text="Age"
                    android:textColor="#255950"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user_gender"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:text="Gender"
                    android:textColor="#255950"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/win_num"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:text="Win"
                    android:textColor="#255950"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/lose_num"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Lose"
                    android:textColor="#255950"
                    android:textStyle="bold"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/separator"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rank_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="480dp"
                android:layout_gravity="center" />

        </LinearLayout>

    </FrameLayout>


</LinearLayout>