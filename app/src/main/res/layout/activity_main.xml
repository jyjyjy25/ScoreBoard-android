<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/title"
        android:layout_width="350dp"
        android:layout_height="135dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="65dp"
        android:src="@drawable/title" />

    <ImageView
        android:id="@+id/show_info_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/show_info_button"
        android:layout_marginTop="90dp"/>

    <ImageView
        android:id="@+id/show_record_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/show_record_button"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/show_rank_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/show_rank_button"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/record_match_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:src="@drawable/record_match_button" />

</LinearLayout>