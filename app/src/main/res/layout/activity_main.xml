<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5EC"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="75dp"
        android:background="@drawable/title" />

    <ImageView
        android:id="@+id/show_record_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/show_record_button"
        android:layout_marginTop="160dp"/>

    <ImageView
        android:id="@+id/show_rank_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/show_rank_button"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/record_match_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/record_match_button"
        android:layout_marginTop="65dp"/>

</LinearLayout>