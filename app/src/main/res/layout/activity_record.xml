<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/record_title"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/title_separator"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/index_game"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/game_pressed_btn" />

        <ImageButton
            android:id="@+id/index_user"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/user_btn" />

        <ImageButton
            android:id="@+id/index_score"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/score_btn" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/record_background">

        <LinearLayout
            android:id="@+id/score_layout"
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">

            <LinearLayout
                android:id="@+id/score_index"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/match_date"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="날짜"
                    android:textColor="#255950"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user1_name"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="유저1"
                    android:textColor="#255950"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user2_name"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="유저2"
                    android:textColor="#255950"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user1_score"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="유저1 점수"
                    android:textColor="#255950"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user2_score"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="유저2 점수"
                    android:textColor="#255950"
                    android:textStyle="bold"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/index_separator"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/score_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="480dp"
                android:layout_gravity="center"/>

        </LinearLayout>


    </FrameLayout>


</LinearLayout>