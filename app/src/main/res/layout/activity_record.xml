<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5D8D0"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/index_game"
            android:layout_width="50dp"
            android:layout_height="76dp"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="125dp"
            android:background="@drawable/record_game_pressed_index" />

        <ImageButton
            android:id="@+id/index_user"
            android:layout_width="50dp"
            android:layout_height="76dp"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="205dp"
            android:background="@drawable/record_user_index" />

        <ImageButton
            android:id="@+id/index_score"
            android:layout_width="50dp"
            android:layout_height="76dp"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="285dp"
            android:background="@drawable/record_score_index" />

        <ImageView
            android:layout_width="411dp"
            android:layout_height="631dp"
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/show_record_background"
            android:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/game_recycler_view"
            android:layout_width="320dp"
            android:layout_height="480dp"
            android:layout_gravity="center"
            android:visibility="visible"
            android:layout_marginTop="50dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/user_recycler_view"
            android:layout_width="320dp"
            android:layout_height="480dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:layout_marginTop="50dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/score_recycler_view"
            android:layout_width="320dp"
            android:layout_height="480dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:layout_marginTop="50dp"/>

    </FrameLayout>


</LinearLayout>