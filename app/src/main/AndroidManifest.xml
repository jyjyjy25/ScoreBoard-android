<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.techtown.miniproject">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="ScoreBoard"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MiniProject"
        tools:targetApi="31">
        <activity
            android:name=".activities.MainActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.InfoActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".activities.RankActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".activities.RecordActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".activities.NewscoreDateActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".activities.NewscoreGameActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            android:exported="false" />
        <activity
            android:name=".activities.NewscoreUserActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            android:exported="false" />
    </application>

</manifest>